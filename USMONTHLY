Sub SaveValuesOnly()
    Dim ws As Worksheet
    For Each ws In ThisWorkbook.Worksheets
        ws.UsedRange.Value = ws.UsedRange.Value
    Next ws
    ThisWorkbook.SaveAs ThisWorkbook.Path & "\" & Left(ThisWorkbook.Name, InStr(1, ThisWorkbook.Name, ".") - 1) & "_ValuesOnly.xlsx", xlOpenXMLWorkbook
End Sub

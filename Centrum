import tkinter as tk
from tkinter import messagebox
import subprocess

class ProcessKillerApp:
    def __init__(self, master):
        self.master = master
        master.title("Process Killer")

        # Create buttons
        self.ie_button = tk.Button(master, text="Kill Internet Explorer", command=self.kill_ie)
        self.powerpoint_button = tk.Button(master, text="Kill PowerPoint", command=self.kill_powerpoint)
        self.excel_button = tk.Button(master, text="Kill Excel", command=self.kill_excel)
        self.word_button = tk.Button(master, text="Kill Word", command=self.kill_word)

        # Arrange buttons on the GUI
        self.ie_button.pack(pady=10)
        self.powerpoint_button.pack(pady=10)
        self.excel_button.pack(pady=10)
        self.word_button.pack(pady=10)

    def kill_process(self, process_name):
        try:
            subprocess.run(["taskkill", "/f", "/im", process_name], check=True)
            messagebox.showinfo("Success", f"{process_name} process killed successfully.")
        except subprocess.CalledProcessError:
            messagebox.showerror("Error", f"Failed to kill {process_name} process.")

    def kill_ie(self):
        self.kill_process("iexplore.exe")

    def kill_powerpoint(self):
        self.kill_process("POWERPNT.EXE")

    def kill_excel(self):
        self.kill_process("EXCEL.EXE")

    def kill_word(self):
        self.kill_process("WINWORD.EXE")

if __name__ == "__main__":
    root = tk.Tk()
    app = ProcessKillerApp(root)
    root.mainloop()

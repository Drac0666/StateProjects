private Function PathUpFromFile(ByVal fileFullName As String, ByVal levelsUp As Long) As String
    Dim p As String, i As Long, pos As Long
    p = fileFullName
    ' Go up "levelsUp" times starting from the file (first strip filename)
    For i = 1 To levelsUp
        pos = InStrRev(p, "\")
        If pos <= 1 Then Exit For
        p = Left$(p, pos - 1)
    Next i
    PathUpFromFile = p
End Function

import pandas as pd
import sqlite3

# Example dictionary of DataFrames
dataframes = {
    "df1": pd.DataFrame({"a": [1, 2, 3], "b": [4, 5, 6]}),
    "df2": pd.DataFrame({"x": [7, 8, 9], "y": [10, 11, 12]})
}

# Connect to SQLite database (creates a new database if it doesn't exist)
conn = sqlite3.connect("dataframes.db")

# Save each DataFrame to a separate table
for name, df in dataframes.items():
    df.to_sql(name, conn, if_exists="replace", index=False)

# Load each DataFrame from the SQLite database
loaded_dataframes = {
    name: pd.read_sql(f"SELECT * FROM {name}", conn)
    for name in dataframes.keys()
}

# Close the connection
conn.close()

# Display loaded DataFrames to verify
for name, df in loaded_dataframes.items():
    print(f"{name}:\n{df}\n")

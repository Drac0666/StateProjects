import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Load your data into a Pandas DataFrame
df = pd.read_csv("your_data.csv")  # Replace with your file path

# 1. Descriptive Statistics:
print(df.describe())  # Get summary statistics for all columns

# 2. Correlation Analysis:
correlation_matrix = df.corr()
print(correlation_matrix)  # Print the correlation matrix

# 3. Visualizations:
#   a. Scatter Plot:
plt.scatter(df['LTV'], df['DQ'])
plt.xlabel('LTV')
plt.ylabel('DQ')
plt.title('Scatter Plot of LTV vs DQ')
plt.show()

#   b. Box Plot:
sns.boxplot(x='DQ', y='LTV', data=df)
plt.title('Box Plot of LTV by DQ')
plt.show()


import pandas as pd
import plotly.express as px

# Step 1: Load file into DataFrame
file_path = 'your_file.csv'  # Update with your file path
df = pd.read_csv(file_path)

# Step 2: Filter columns containing "HPI" in their names
hpi_df = df.filter(regex='HPI')

# Step 3: Function to plot a 10-row window starting at a specific index
def plot_hpi_range(start_index):
    # Ensure the index range is within bounds
    end_index = min(start_index + 10, len(hpi_df))
    window_df = hpi_df.iloc[start_index:end_index]
    
    # Plot using Plotly
    fig = px.line(window_df, title=f"HPI Data from Index {start_index} to {end_index-1}")
    fig.update_layout(xaxis_title='Index', yaxis_title='HPI Value')
    fig.show()

# Example usage
plot_hpi_range(0)  # Change the start index as needed

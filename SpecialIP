import customtkinter as ctk
import tkinter as tk

class ScrollableApp(ctk.CTk):
    def __init__(self):
        super().__init__()

        self.title("Scrollable CustomTkinter Application")
        self.geometry("600x400")

        # Create a canvas widget
        self.canvas = tk.Canvas(self)
        self.canvas.grid(row=0, column=0, sticky="nsew")

        # Add a horizontal scrollbar to the canvas
        self.h_scrollbar = tk.Scrollbar(self, orient=tk.HORIZONTAL, command=self.canvas.xview)
        self.h_scrollbar.grid(row=1, column=0, sticky="ew")
        self.canvas.configure(xscrollcommand=self.h_scrollbar.set)

        # Create a frame inside the canvas
        self.scrollable_frame = tk.Frame(self.canvas)

        # Create a window in the canvas to hold the frame
        self.canvas.create_window((0, 0), window=self.scrollable_frame, anchor="nw")

        # Configure grid weights for proper resizing
        self.grid_rowconfigure(0, weight=1)
        self.grid_columnconfigure(0, weight=1)

        # Bind the canvas and frame to configure the scroll region
        self.scrollable_frame.bind("<Configure>", self.on_frame_configure)

        # Add content to the frame
        self.populate_frame()

    def on_frame_configure(self, event):
        self.canvas.configure(scrollregion=self.canvas.bbox("all"))

    def populate_frame(self):
        # Add widgets to the scrollable frame
        for i in range(20):
            ctk.CTkButton(self.scrollable_frame, text=f"Button {i + 1}").grid(row=0, column=i, padx=5, pady=5)

if __name__ == "__main__":
    app = ScrollableApp()
    app.mainloop()

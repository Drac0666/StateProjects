import pandas as pd

# Sample data for df1
data1 = {
    'Value': [10, 20, 30, 40, 50]
}
index1 = pd.to_datetime(['01-01-2024', '02-01-2024', '03-01-2024', '04-01-2024', '04-01-2024'])
df1 = pd.DataFrame(data1, index=index1)

# Sample data for df2
data2 = {
    'Value': [5, 15, 25]
}
index2 = pd.to_datetime(['31-12-2023', '01-01-2024', '03-01-2024'])
df2 = pd.DataFrame(data2, index=index2)

# Adding the two dataframes together
result = df1.add(df2, fill_value=0)

print(result)

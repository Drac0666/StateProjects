# Reset index to prepare for final DataFrame transformation
transformed_quantiles_df = transformed_quantiles.reset_index()

# Rename the columns after resetting the index
transformed_quantiles_df.columns = ['Quantile'] + list(transformed_quantiles.columns)

# Pivot for better readability (quantiles as rows, currencies as columns)
pivot_df = transformed_quantiles_df.pivot(index='Quantile', columns=None)

# Rename index for clarity
pivot_df.index.name = 'Quantile'

# Display the final DataFrame
pivot_df

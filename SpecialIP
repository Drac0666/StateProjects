import pandas as pd

# Sample DataFrame
df = pd.DataFrame({
    'A': [1.12, 2.68, 3.14],
    'B': [4.57, 5.68, 6.79],
    'C': [7.12, 8.68, 9.14]
})

# Apply styling with smaller font size
styled_df = df.style.set_properties(**{'font-size': '12pt'})  # Adjust font size as needed
html = styled_df.render()

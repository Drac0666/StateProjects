import pandas as pd
from datetime import datetime

def get_previous_business_day():
    """
    Get the current date minus one business day in the format YYYY-MM-DD.

    Returns:
    str: The date of the previous business day in the format YYYY-MM-DD.
    """
    # Get the current date
    current_date = datetime.today()
    
    # Calculate the previous business day using pandas
    previous_business_day = pd.bdate_range(end=current_date, periods=2)[0]
    
    # Format the date as YYYY-MM-DD
    previous_business_day_str = previous_business_day.strftime('%Y-%m-%d')
    
    return previous_business_day_str

# Example usage
print(get_previous_business_day())

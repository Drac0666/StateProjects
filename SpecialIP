def show_dataframe_in_gui(df):
    """
    Displays a DataFrame in a customtkinter scrollable table layout.
    """
    ctk.set_appearance_mode("System")
    ctk.set_default_color_theme("blue")
    app = ctk.CTk()
    app.title("New Tickets Found")
    app.geometry("1000x500")

    if df.empty:
        label = ctk.CTkLabel(app, text="No new rows found.", font=("Arial", 16))
        label.pack(pady=20)
        app.mainloop()
        return

    # Create scrollable frame
    scrollable_frame = ctk.CTkScrollableFrame(app, width=980, height=460)
    scrollable_frame.pack(pady=10)

    # Show headers
    for col_idx, column in enumerate(df.columns):
        header = ctk.CTkLabel(scrollable_frame, text=column, font=("Arial", 12, "bold"))
        header.grid(row=0, column=col_idx, padx=5, pady=2, sticky="w")

    # Show rows
    for row_idx, row in df.iterrows():
        for col_idx, value in enumerate(row):
            cell = ctk.CTkLabel(scrollable_frame, text=str(value), font=("Arial", 11), anchor="w")
            cell.grid(row=row_idx+1, column=col_idx, padx=5, pady=2, sticky="w")

    app.mainloop()

import pandas as pd

# Read the config file
config_file = "config.xlsx"  # Update this path if needed
config_df = pd.read_excel(config_file)

# Convert config to a dictionary
config_dict = dict(zip(config_df["Parameter"], config_df["Value"]))

# Assign variables dynamically
for param, value in config_dict.items():
    try:
        # Convert numeric values properly
        if isinstance(value, str) and value.replace(".", "", 1).isdigit():
            value = float(value) if "." in value else int(value)
        globals()[param] = value
    except Exception as e:
        print(f"Error setting variable {param}: {e}")

# Print all variables for verification
for param in config_dict.keys():
    print(f"{param} = {globals().get(param)}")

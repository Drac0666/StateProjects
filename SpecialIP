import pandas as pd

# Load your dataset
# df = pd.read_csv('your_dataset.csv')

# Example selected column and Delinquency
selected_column = 'Column1'  # Replace with your actual column name

# Convert 'Delinquency' column to binary (1 for 'Y', 0 for 'N')
df['Delinquency'] = df['Delinquency'].apply(lambda x: 1 if x == 'Y' else 0)

# Filter the dataset to only include rows where Delinquency = 1
delinquent_data = df[df['Delinquency'] == 1]

# Count the occurrences of each value in the selected column where Delinquency = 1
value_counts = delinquent_data[selected_column].value_counts()

# Display the value counts to the user
import ace_tools as tools; tools.display_dataframe_to_user(name="Influential Values for Delinquency = 1", dataframe=value_counts)

# Find the value with the most influence (the highest count)
most_influential_value = value_counts.idxmax()
most_influence_count = value_counts.max()

# Output the result
print(f"The most influential value in {selected_column} for Delinquency = 1 is: {most_influential_value} with {most_influence_count} occurrences.")

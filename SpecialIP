import pandas as pd

def save_dataframe_to_pickle(df, file_path):
    """
    Save a DataFrame to a pickle file.

    Parameters:
    df (pandas.DataFrame): The DataFrame to save.
    file_path (str): The path to the pickle file where the DataFrame will be saved.
    """
    df.to_pickle(file_path)
    print(f"DataFrame saved to {file_path}")

def read_dataframe_from_pickle(file_path):
    """
    Read a DataFrame from a pickle file.

    Parameters:
    file_path (str): The path to the pickle file from which the DataFrame will be read.

    Returns:
    pandas.DataFrame: The DataFrame read from the pickle file.
    """
    df = pd.read_pickle(file_path)
    print(f"DataFrame read from {file_path}")
    return df

def extract_last_index(df):
    """
    Extract the last index from a DataFrame.

    Parameters:
    df (pandas.DataFrame): The DataFrame from which to extract the last index.

    Returns:
    The last index of the DataFrame.
    """
    last_index = df.index[-1]
    print(f"The last index of the DataFrame is: {last_index}")
    return last_index

# Example usage
if __name__ == "__main__":
    # Creating a sample DataFrame
    data = {
        'Date': ['2024-01-01', '2024-01-02', '2024-01-03'],
        'FX': [1.1, 1.2, 1.3]
    }
    df = pd.DataFrame(data)
    print("Original DataFrame:")
    print(df)
    
    # Saving the DataFrame to a pickle file
    save_dataframe_to_pickle(df, 'sample_dataframe.pkl')
    
    # Reading the DataFrame from the pickle file
    df_loaded = read_dataframe_from_pickle('sample_dataframe.pkl')
    print("Loaded DataFrame:")
    print(df_loaded)
    
    # Extracting the last index from the DataFrame
    last_index = extract_last_index(df_loaded)

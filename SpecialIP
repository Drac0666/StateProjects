from playwright.sync_api import sync_playwright

def main():
    with sync_playwright() as p:
        browser = p.chromium.launch(headless=False)  # headless=False, żeby zobaczyć okno przeglądarki
        page = browser.new_page()
        page.goto("https://example.com")
        print("Strona otwarta. Naciśnij ENTER, aby zamknąć.")
        input()
        browser.close()

if __name__ == "__main__":
    main()

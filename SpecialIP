import customtkinter as ctk

def validate_entry(entry: ctk.CTkEntry, placeholder: str) -> bool:
    """
    Validate if the text in the CTkEntry is different from the placeholder and if it's an integer.

    Args:
        entry (ctk.CTkEntry): The CTkEntry widget to validate.
        placeholder (str): The placeholder text to compare against.

    Returns:
        bool: True if text is different from placeholder and is an integer, False otherwise.
    """
    # Get the current text from the CTkEntry widget
    current_text = entry.get()
    
    # Check if the text is different from the placeholder
    if current_text == placeholder:
        return False
    
    # Check if the text is an integer
    if current_text.isdigit():
        return True
    
    return False

# Example usage in a customtkinter application
def on_validate_button_click():
    # Retrieve the entry widget
    entry_text = my_entry.get()
    
    # Define the placeholder text
    placeholder_text = "Enter an integer"
    
    # Validate the entry
    if validate_entry(my_entry, placeholder_text):
        print("The entry is valid and contains an integer.")
    else:
        print("The entry is either invalid or not an integer.")

# Create a customtkinter application
app = ctk.CTk()
app.title("CTkEntry Validation")

# Placeholder text
placeholder_text = "Enter an integer"

# Create an entry widget with placeholder text
my_entry = ctk.CTkEntry(app, placeholder_text=placeholder_text)
my_entry.pack(pady=20)

# Create a button to validate the entry
validate_button = ctk.CTkButton(app, text="Validate", command=on_validate_button_click)
validate_button.pack(pady=20)

# Start the main loop
app.mainloop()

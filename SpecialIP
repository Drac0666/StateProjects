import numpy as np
import plotly.graph_objects as go
from plotly.io import write_image

# Generate random numbers
np.random.seed(42)  # For reproducibility
x = np.arange(1, 101)  # X-axis: 1 to 100
y = np.random.randint(1, 100, size=100)  # Y-axis: Random numbers

# Create a line plot using Plotly
fig = go.Figure()
fig.add_trace(go.Scatter(x=x, y=y, mode='lines', name='Random Line'))

# Customize layout
fig.update_layout(
    title='Random Number Line Plot',
    xaxis_title='X-Axis',
    yaxis_title='Y-Axis',
    template='plotly_white'
)

# Show the plot (optional)
# fig.show()

# Export the plot to PNG using Orca
output_path = "random_line_plot.png"
write_image(fig, output_path)

print(f"Plot saved as {output_path}")

import pandas as pd

def dict_to_dataframe(input_dict):
    """
    Converts a dictionary into a pandas DataFrame.

    Args:
        input_dict (dict): Dictionary where keys are column names and values are lists of data.

    Returns:
        pd.DataFrame: A pandas DataFrame constructed from the dictionary.
    """
    # Ensure all values are lists of the same length
    max_len = max(len(v) if isinstance(v, list) else 1 for v in input_dict.values())
    standardized_dict = {
        k: v if isinstance(v, list) else [v] * max_len for k, v in input_dict.items()
    }

    # Convert dictionary to DataFrame
    return pd.DataFrame(standardized_dict)

# Example usage
data = {
    "Column1": [1, 2, 3],
    "Column2": ["A", "B", "C"],
    "Column3": [True, False, True]
}

df = dict_to_dataframe(data)
print(df)


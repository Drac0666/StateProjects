import pyautogui
import time

def track_mouse_position(duration=10):
    start_time = time.time()
    while time.time() - start_time < duration:
        x, y = pyautogui.position()  # Get the current position of the mouse
        print(f"Mouse Position: X={x}, Y={y}")
        time.sleep(0.1)  # Adjust the delay to control the frequency of updates

# Run the function to track mouse position for 10 seconds
track_mouse_position()

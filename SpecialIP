# Define the quantiles for the right tail and their complements for the left tail
quantiles = [0.95, 0.99, 0.995, 0.999, 0.9999]
left_tail_quantiles = [1 - q for q in quantiles]

# Combine all quantiles
all_quantiles = sorted(quantiles + left_tail_quantiles)

# Calculate the quantiles for each currency column
quantile_values = sorted_results_df[currency_columns].quantile(all_quantiles, interpolation='nearest')

# Convert the quantiles into a DataFrame
quantile_df = quantile_values.reset_index()
quantile_df.columns = ['Quantile', 'Currency', 'Value']

# Rearrange the DataFrame for better readability
quantile_df = quantile_df.pivot(index='Quantile', columns='Currency', values='Value')

# Display the result
quantile_df

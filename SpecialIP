import pandas as pd

def merge_dataframes(dict_of_dfs):
    # Initialize an empty DataFrame to hold the results
    result_df = pd.DataFrame()

    # Loop through the dictionary
    for date, df in dict_of_dfs.items():
        # Add the date as a new column in the DataFrame
        df['Date'] = date
        # Append to the result DataFrame
        result_df = pd.concat([result_df, df])

    # Set the 'Date' column as the index
    result_df.set_index('Date', inplace=True)
    
    # Sort the DataFrame by the index (dates)
    result_df.sort_index(inplace=True)

    # Select and order the columns as required
    result_df = result_df[['Ticket', 'Fair Price', 'par Value']]
    
    return result_df

# Example usage
# Assuming 'dataframes_dict' is your dictionary of DataFrames

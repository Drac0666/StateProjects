from tkinterhtml import HtmlFrame

class HTMLDocumentViewer:
    def __init__(self, root):
        self.root = root
        self.root.title("HTML Document Viewer")

        # Create HtmlFrame widget for displaying HTML content
        self.html_frame = HtmlFrame(root, horizontal_scrollbar="auto")
        self.html_frame.pack(expand=True, fill="both")

        # Load HTML content
        html_content = "<h1>Hello, HTML Document!</h1>"
        self.html_frame.set_content(html_content)

if __name__ == "__main__":
    root = tk.Tk()
    app = HTMLDocumentViewer(root)
    root.mainloop()


import tkinter as tk
from tkinterhtml import HtmlFrame

class HTMLFileViewer:
    def __init__(self, root):
        self.root = root
        self.root.title("HTML File Viewer")

        # Create HtmlFrame widget for displaying HTML content
        self.html_frame = HtmlFrame(root, horizontal_scrollbar="auto")
        self.html_frame.pack(expand=True, fill="both")

        # Load local HTML file
        file_path = "path/to/your/file.html"
        self.load_html_file(file_path)

    def load_html_file(self, file_path):
        try:
            with open(file_path, "r", encoding="utf-8") as file:
                html_content = file.read()
                self.html_frame.set_content(html_content, file=file_path)
        except FileNotFoundError:
            print(f"File not found: {file_path}")
        except Exception as e:
            print(f"An error occurred: {e}")

if __name__ == "__main__":
    root = tk.Tk()
    app = HTMLFileViewer(root)
    root.mainloop()

